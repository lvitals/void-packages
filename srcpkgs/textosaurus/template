# Template file for 'textosaurus'

pkgname=textosaurus
version=0.9.7
revision=1
build_style=qmake
configure_args=build.pro
hostmakedepends="git pkg-config qt5-svg-devel qt5-qmake"
makedepends="qt5-tools qt5-svg-devel"
depends="qt5-svg"
short_desc="Simple cross-platform text editor based on Qt and Scintilla"
maintainer="Leandro Vital <leavitals@gmail.com>"
license="GPL-3.0"
homepage="https://github.com/martinrotter/textosaurus"

do_fetch() {
  git clone --branch ${version} ${homepage}.git $wrksrc
  cd ${wrksrc}
  git submodule sync
  git submodule update --init --recursive
}